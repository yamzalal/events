<h1><%= pluralize(@events.size, 'Event') %>  running currently</h1>
<ul>
<% @events.each do |event| %>
	<article>
		<header>
			<h2><%= event.name %></h2>
		<header>
		<p>
			<%= truncate(event.description, length: 35, separator: ' ') %>
		</p>
		<table>
			<tr>
				<th>When:</th>
				<td><%= event.starts_at %></td>
			</tr>
			<tr>
				<th>Where:</th>
				<td><%= event.location %></td>
			</tr>
			<tr>
				<th>Price:</th>
				<% if event.price == 0 %>
					<td>Free</td>
				<% else %>
				    <td><%= number_to_currency(event.price) %></td>
				<% end %>
			</tr>
		</table>
	</article>
	<%end%>
</ul>